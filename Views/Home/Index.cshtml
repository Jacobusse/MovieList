@model List<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Genre</th>
            <th>
                <a asp-controller="Movie" asp-action="Add" class="btn btn-success">Add</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (Movie movie in Model) {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.Year</td>
            <td>@movie.Rating</td>
            <td>@movie?.Genre.Name</td>
            <td>
                <a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-primary">Edit</a>
            </td>
        </tr>
}
    </tbody>

</table>